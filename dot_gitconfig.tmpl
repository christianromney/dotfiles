[user]
  name = Christian Romney
{{- if eq .chezmoi.hostname "christian" }}
  email = {{ .git.work.email | quote }}
  signingkey = {{ .git.work.gpgSigningKey }}
{{- else }}
  email = {{ .git.home.email | quote }}
  signingkey = {{ .git.home.gpgSigningKey }}
{{- end }}
[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
  editor = emacs
  pager = delta
[delta]
  features = side-by-side line-numbers decorations
  syntax-theme = Monokai Extended Bright
  whitespace-error-style = 22 reverse
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = bold yellow ul
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax
[interactive]
  diffFilter = delta --color-only --features=interactive
[help]
  autocorrect = 1
[alias]
  br = branch
  ci = commit -Ss
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  fp = format-patch
  ls = log --oneline
  st = status
  up = pull
  ff = pull --ff-only
  rl = reflog
  staged = diff --cached
  file-rm = clean
  dir-rm = clean
  praise = blame
  shortsha = rev-parse --short=20
[color]
  ui = auto
[color "diff"]
  meta = cyan bold
  commit = green bold
  frag = yellow bold
  old = red
  new = green
  whitespace = red reverse
[color "branch"]
  current = cyan bold
  local = cyan
  remote = yellow
[color "status"]
  added = green
  changed = yellow
  untracked = red
[push]
  default = simple
  followTags = true
[merge]
  tool = opendiff
[mergetool]
  prompt = false
[clean]
  requireForce = false
[include]
  path = ~/.gitconfig.secrets
[diff]
  colorMoved = default
[difftool]
  prompt = false
[rerere]
  enabled = 1
[magit]
  hideCampaign = true   
[icdiff]
  options = --highlight --line-numbers
[pull]
  ff = only
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	clean = git-lfs clean -- %f
	required = true
[init]
	defaultBranch = master
[github]
	user = christianromney
{{- if eq .chezmoi.hostname "christian" }}
# nubank
[url "git@github.com"]
  insteadOf = git://github.com/
{{- end }}
