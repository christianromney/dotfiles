[user]
  name = Christian Romney
{{- if eq .chezmoi.fqdnHostname "christian.romney" }}
  email = {{ .work.email | quote }}
  signingkey = {{ .work.gpgSigningKey }}
{{- else }}
  email = {{ .home.email | quote }}
  signingkey = {{ .home.gpgSigningKey }}
{{- end }}
[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
  editor = emacs
  pager = delta
[commit]
  gpgSign = true
[tag]
  gpgSign = true
{{- if eq .chezmoi.hostname "christian" }}
[gpg]
  program = /usr/local/MacGPG2/bin/gpg2
{{- end }}
[delta]
  features = interactive decorations
  line-numbers = true
  navigate = true
  side-by-side = true
  true-color  = always
  whitespace-error-style = 22 reverse
[delta "interactive"]
  keep-plus-minus-markers = false
[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = bold yellow ul
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-style = file line-number syntax
[interactive]
  diffFilter = delta --hyperlinks --color-only --detect-dark-light --features=interactive
[help]
  autocorrect = 1
[alias]
  br = branch
  ci = commit -s
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  fp = format-patch
  ls = log --oneline
  st = status
  up = pull
  ff = pull --ff-only
  rl = reflog
  staged = diff --cached
  file-rm = clean
  dir-rm = clean
  praise = blame
  shortsha = rev-parse --short=20
[color]
  ui = auto
[color "diff"]
  meta = cyan bold
  commit = green bold
  frag = yellow bold
  old = red
  new = green
  whitespace = red reverse
[color "branch"]
  current = cyan bold
  local = cyan
  remote = yellow
[color "status"]
  added = green
  changed = yellow
  untracked = red
[push]
  default = simple
  followTags = true
[merge]
  conflictStyle = zdiff3
  tool = opendiff
[mergetool]
  prompt = false
[clean]
  requireForce = false
[include]
  path = ~/.gitconfig.secrets
[diff]
  colorMoved = default
[difftool]
  prompt = false
[rerere]
  enabled = 1
[magit]
  hideCampaign = true   
[icdiff]
  options = --highlight --line-numbers
[pull]
  ff = only
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  clean = git-lfs clean -- %f
  required = true
[init]
  defaultBranch = master
[github]
  user = christianromney
{{- if eq .chezmoi.hostname "christian" }}
# nubank
[url "git@github.com"]
  insteadOf = git://github.com/
{{- end }}
